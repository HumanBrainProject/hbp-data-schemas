{
    "$schema": "http://json-schema.org/schema#",
    "title": "Dataset",
    "description": "A json schema for a dataset",
    "version": "1.0",
    "type": "object",
    "required": [
        "uuid",
        "title",
        "contributors",
        "methods",
        "representations",
        "specimen"
    ],
    "properties": {
        "uuid": {
            "$ref": "#/definitions/uuid"
        },
        "title": {
            "description": "The dataset title",
            "type": "string"
        },
        "methods": {
            "description": "The methods used in the dataset",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://schemas.humanbrainproject.eu/neuroinformatics/ksearch-ontology-term-schema-1.0.json"
            }
        },
        "classifications": {
            "description": "A list of classification terms derived from a manual or automated analysis",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://schemas.humanbrainproject.eu/neuroinformatics/ksearch-ontology-term-schema-1.0.json"
            }
        },
        "contributors": {
            "description": "The people who contributed to the dataset",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://schemas.humanbrainproject.eu/neuroinformatics/ksearch-userprofile-schema-1.0.json"
            }
        },
        "domain_aspects": {
            "description": "The domain types of the dataset",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://schemas.humanbrainproject.eu/neuroinformatics/ksearch-ontology-term-schema-1.0.json"
            }
        },
        "locations": {
            "description": "Brain region(s)",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://schemas.humanbrainproject.eu/neuroinformatics/ksearch-ontology-term-schema-1.0.json"
            }
        },
        "specimen": {
            "description": "An individual animal, plant, or single-celled life form",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://schemas.humanbrainproject.eu/neuroinformatics/ksearch-specimen-schema-1.0.json"
            }
        },
        "representations": {
            "description": "Concrete representations of a data artifact.",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "datatype",
                    "access"
                ],
                "properties": {
                    "datatype": {
                        "$ref": "https://schemas.humanbrainproject.eu/neuroinformatics/ksearch-ontology-term-schema-1.0.json"
                    },
                    "access": {
                        "description": "The URL of the representation",
                        "type": "string"
                    },
                    "imagestack_metadata": {
                        "$ref": "#/definitions/imagestack_metadata"
                    }
                }
            }
        }

    },
    "definitions": {
        "imagestack_metadata": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "sectional_plane",
                    "resolution",
                    "access"
                ],
                "properties": {
                    "overlays": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "minItems": 1,
                            "properties": {
                                "interactive": {
                                    "type": "boolean"
                                },
                                "style": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "access": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "sectional_plane": {
                        "type": "object",
                        "required": [
                            "orientation",
                            "code",
                            "stack"
                        ],
                        "properties": {
                            "orientation": {
                                "type": "string"
                            },
                            "code": {
                                "type": "string"
                            },
                            "stack": {
                                "type": "string"
                            }
                        }
                    },
                    "resolution": {
                        "type": "object",
                        "properties": {
                            "unit": {
                                "type": "string"
                            },
                            "unit_per_pixel": {
                                "type": "string"
                            }
                        }
                    },
                    "access": {
                        "type": "string"
                    }
                }
            }
        },
        "uuid": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}$"
        }
    }


}
